name: Trigger Netlify Build

on:
  push:
    branches:
      - dev
  pull_request:
    branches:
      - dev
jobs:
  trigger-netlify:
    runs-on: ubuntu-latest
    steps:
      - name: Trigger Netlify build hook
        run: |
          curl -X POST -d '{}' https://api.netlify.com/build_hooks/68664b620b5a079bab0023d8
